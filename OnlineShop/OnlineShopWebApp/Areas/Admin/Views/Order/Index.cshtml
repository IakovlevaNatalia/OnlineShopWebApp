@model List<OrderViewModel>
<div class="row">
	@await Html.PartialAsync("AdminMenu")
	<div class="col-9">
		<div class="row">
		<h3>ORDER LIST</h3>
		</div>

		<div class="row">
		<table class ="table">
			<thead>

		<tr>
			<th>№</th>
	        <th>SUMMARY</th>
			<th>STATUS</th>
			<th>DATE</th>
			<th>TIME</th>
	    </tr>
		</thead>
		<tbody>
		@for(int i=0; i<Model.Count; i++)
			{
				<tr>
					<td>@(i+1)</td>
					<td>@Model[i].Cost</td>
					<td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
					<td>@Model[i].CreateDateTime.ToString("d")</td>
					<td>@Model[i].CreateDateTime.ToString("t")</td>
					<td><a 
						asp-area="Admin"
						asp-controller="Order"
						asp-action="Detail"
						asp-route-orderId="@Model[i].Id">DETAILS</a></td>
				</tr>
			}
			</tbody>
		</table>
	</div>
	</div>
</div>


