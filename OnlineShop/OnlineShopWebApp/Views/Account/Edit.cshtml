@model UserViewModel

<div class="row justify-content-center">
    <div class="card shadow my-2 col-lg-10">
        <div class="card-body">
            <form asp-controller="Account" asp-action="Edit" enctype="multipart/form-data">
                <div class="validation" asp-validation-summary=ModelOnly></div>
                <div class="row justify-content-center">
                    <div class="col">
                        <div class="mb-3">
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="FirstName" value="@Model.FirstName" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="text" asp-for="LastName" class="form-control" placeholder="SecondName" value="@Model.LastName" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="email" value="@Model.Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <input type="tel" asp-for="Phone" class="form-control" placeholder="PHONE" value="@Model.Phone" />
                            <span asp-validation-for="Phone"></span>
                        </div>
                        <div class="mb-3">
                            <label>IMAGE:</label>
                            <input type="file" class="form-control" asp-for="UploadedImage" />
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-dark">CHANGE</button>
                        </div>
                        <div class="mb-3 text-center">
	                        <a class="btn btn-dark" asp-controller="Account" asp-action="Profile">CANCEL</a>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

