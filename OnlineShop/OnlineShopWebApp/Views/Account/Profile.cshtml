<div class="col-2 float-left">
	<a asp-area="" asp-controller="Account" asp-action="UserOrders" asp-route-userName="@User.Identity.Name">ORDERS</a>
	<br />
	<a asp-area="" asp-controller="Account" asp-action="Edit" asp-route-userName="@User.Identity.Name">PERSONAL DATA</a>
	<br /> 
	<a asp-area="" asp-controller="Account" asp-action="Logout">LOG OUT</a>
</div> 


<div class="row justify-content-center ">
	<div class="card shadow my-2 col-lg-10">
		<div class="card-body">
			<div class="row">
				<div class="col-4 text-center">
					<img src="@Model.AvatarPath" width="150" height="110" @*alt="image"*@ @*class="rounded-circle"*@ />
				</div>
				<div class="col-8 text-sm-center text-sm-start">
					<div class="my-2">
						<h1> Hi, @Model.FirstName</h1>
						<h1>@Model.LastName</h1>
					</div>
					<div class="my-2">
						<h4>@Model.Email</h4>
					</div>
					<div class="my-2">
						<a  class="btn btn-outline-success" asp-controller="Account" asp-action="Edit" class="link-dark"><h6>CHANGE PERSONAL DATA</h6></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>