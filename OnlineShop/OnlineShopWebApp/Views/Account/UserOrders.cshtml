@model IEnumerable<OrderViewModel>

<div class="row justify-content-center">
	<div class="card shadow my-2 col-lg-10">
		<div class="card-body">
			<h3>ORDER LIST</h3>
			<div class="row">
				<table class="table">
					<tr>
						<th>№</th>
						<th>SUMMARY</th>
						<th>ORDER STATUS</th>
						<th>ORDER DATE</th>
						<th>TIME</th>
						<th></th>
					</tr>
					@foreach (var order in Model)
					{
						<tr>
							<td>@order.Id</td>
							<td>$@order.Cost</td>
							<td>@order.Status</td>
							<td>@order.CreateDateTime.ToString("d")</td>
							<td>@order.CreateDateTime.ToString("t")</td>
							<td><a asp-controller="Account" asp-action="UserOrderDetails" asp-route-orderId="@order.Id" class="btn btn-info">DETAILS</a></td>
						</tr>
					}
				</table>
			</div>
		</div>
	</div>  
</div>