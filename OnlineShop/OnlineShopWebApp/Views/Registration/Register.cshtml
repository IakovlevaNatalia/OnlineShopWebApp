@model RegistrationViewModel

<form asp-action="Register" asp-controller="Registration" method="post">
	<div>
		<div class="validation" asp-validation-summary="All"></div>
	
		<h3>REGISTRATION</h3>

		<input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>

		<div>
			<label asp-for="UserName">YOUR NAME</label><br />
			<input asp-for="UserName"/>
			<span asp-validation-for="UserName"></span>
		</div>

		<div>
			<label asp-for="Phone">PHONE</label><br />
			<input asp-for="Phone"/>
			<span asp-validation-for="Phone"></span>
		</div>

		<div>
			<label asp-for="Login">LOGIN</label><br />
			<input type="email" asp-for="Login"/>
			<span asp-validation-for="Login"></span>
		</div>

		<div>
			<label asp-for="Password">PASSWORD</label><br />
			<input type="password" input asp-for="Password"/>
			<span asp-validation-for="Password"></span>
		</div>

		<div>
			<label asp-for="ConfirmPassword">CONFIRM PASSWORD</label><br />
			<input type ="password" input asp-for="ConfirmPassword"/>
			<span asp-validation-for="ConfirmPassword"></span>
		</div><br />

		<input type="submit" value="REGISTER" class ="btn btn-outline-success" role="button" asp-controller="Registration" asp-action="Register"></div>
		<div><br>
</div>
</form>
